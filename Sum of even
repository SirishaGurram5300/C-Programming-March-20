//sum of even
#include <stdio.h>
int sum_of_even(int n);
int main() {
    int n;
	printf("Enter the value of n: ");
    scanf("%d", &n);
    printf("The sum of first %d even numbers is: %d\n", n, sum_of_even(n));
    return 0;
}
int sum_of_even(int n) {
    if (n == 0) {
        return 0;
    } else {
        return 2 * n + sum_of_even(n - 1);
    }
}
